{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "plugins": [],
  "rules": {
    "linebreak-style": ["error", "unix"],
    "no-constant-condition": ["error", { "checkLoops": false }],
    "no-prototype-builtins": "off",
    "prefer-const": [
      "error",
      {
        "destructuring": "all"
      }
    ],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "always"]
  }
}
